{
	"info": {
		"_postman_id": "supply-chain-v1-full-v2",
		"name": "Supply Chain System - Automated Test",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Setup & Auth",
			"item": [
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.token) {",
									"    pm.collectionVariables.set(\"token\", jsonData.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [{ "key": "Content-Type", "value": "application/json" }],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"admin@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": { "raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth", "login"] }
					}
				},
				{
					"name": "Get & Save Locations",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.length >= 2) {",
									"    pm.collectionVariables.set(\"locationId\", jsonData[0]._id);",
									"    pm.collectionVariables.set(\"targetLocationId\", jsonData[1]._id);",
									"    console.log(\"Saved source: \" + jsonData[0].name);",
									"    console.log(\"Saved target: \" + jsonData[1].name);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
						"url": { "raw": "{{baseUrl}}/locations", "host": ["{{baseUrl}}"], "path": ["locations"] }
					}
				},
				{
					"name": "Get & Save Products",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.length > 0) {",
									"    pm.collectionVariables.set(\"productId\", jsonData[0]._id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
						"url": { "raw": "{{baseUrl}}/products", "host": ["{{baseUrl}}"], "path": ["products"] }
					}
				}
			]
		},
		{
			"name": "2. Inventory Actions",
			"item": [
				{
					"name": "Get Source Inventory",
					"request": {
						"method": "GET",
						"header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
						"url": { "raw": "{{baseUrl}}/inventory/location/{{locationId}}", "host": ["{{baseUrl}}"], "path": ["inventory", "location", "{{locationId}}"] }
					}
				},
				{
					"name": "Transfer Stock (Factory -> Warehouse)",
					"request": {
						"method": "POST",
						"header": [
							{ "key": "Authorization", "value": "Bearer {{token}}" },
							{ "key": "Content-Type", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"productId\": \"{{productId}}\",\n    \"fromLocationId\": \"{{locationId}}\",\n    \"toLocationId\": \"{{targetLocationId}}\",\n    \"quantity\": 100\n}"
						},
						"url": { "raw": "{{baseUrl}}/inventory/transfer", "host": ["{{baseUrl}}"], "path": ["inventory", "transfer"] }
					}
				}
			]
		}
	],
	"variable": [
		{ "key": "baseUrl", "value": "http://localhost:5000/api/v1", "type": "string" },
		{ "key": "token", "value": "", "type": "string" },
		{ "key": "productId", "value": "", "type": "string" },
		{ "key": "locationId", "value": "", "type": "string" },
		{ "key": "targetLocationId", "value": "", "type": "string" }
	]
}
